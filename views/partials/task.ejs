<form class="AddModal" action="/tasks" method="POST">
  <div class="modal" id="add-task-modal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add a New Task</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">

          <div class="input-container">
            <i class="fas fa-plus icon m-0"></i>
            <input class="input-field" type="text" placeholder="Add Task" name="input">
          </div>
          <!-- Submit Button -->
          <button type="submit" class="btn m-0">Add!</button>
        </div>
      </div>
    </div>
  </div>
</form>
