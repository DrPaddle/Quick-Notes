<body>
    <section class="container">
        <div class="read">
          <i class="material-icons">
            library_books
            </i>
          <p>Books (To read)</p>
          <p></p>
          <p></p>
        </div>
        <div class="buy">
          <i class="material-icons">
            shopping_cart
            </i>
          <p>Products (To buy)</p>
          <p></p>
          <p></p>
        </div>
        <div class="eat">
          <i class="material-icons">
            fastfood
            </i>
          <p>Restaurants, cafes, etc. (To eat)</p>
          <p></p>
          <p></p>
        </div>
        <div class="watch">
          <i class="material-icons">
            tv
            </i>
          <p>Film / Series (To watch)</p>
          <p></p>
          <p></p>
        </div>
        <div class="other">
          <i class="material-icons">
            more_horiz
            </i>
          <p>Other</p>
          <p></p>
          <p></p>
        </div>
      </div>
    </div>
</div>
<footer>
<button type="button" class="btn btn-light">Plus</button>
</footer>
</body>
</section>
</html>
